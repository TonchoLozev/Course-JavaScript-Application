{{#each posts}}
    <article class="post" data-id="{{_id}}">
        <div class="col rank">
            <span>{{math @index "+" 1}}</span>
        </div>
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">
                    {{title}}
                </a>
            </div>
            <div class="details">
                <div class="info">
                    submitted {{submited}} ago by {{author}}
                </div>
                <div class="controls">
                    <ul>
                        <li class="action"><a class="commentsLink" href="#">comments</a></li>
                        {{#if isAuthor}}
                        <li class="action"><a class="editLink" href="#">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#">delete</a></li>
                        {{/if}}
                    </ul>
                </div>

            </div>
        </div>
    </article>
{{/each}}